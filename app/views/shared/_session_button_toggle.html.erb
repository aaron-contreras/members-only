<% if member_signed_in? %>

  <%= link_to destroy_member_session_path, method: :delete,
              class: 'navbar-item' do %>
    <p>Sign out <i class="fas fa-sign-in-alt"></i></p>
  <% end %>

<% else %>

  <%= link_to new_member_session_path, class: 'navbar-item' do%>
    <p>Sign in <i class="fas fa-sign-in-alt"></i></p>
  <% end %>

<% end %>
